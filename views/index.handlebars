<div class="added-burgers">

    <div class="row">
        <div class="col-md-6" id="list">
            <ul>
                <h1 id="menu"> Menu </h1>
                <p> Order Number - Burger </p>
                {{#each burgers}} {{#unless devoured}} {{> addedburger }} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-6" id="eaten-burgers">
        </div>
    </div>



    <div class="eaten-burgers">

        <ul>
            <h1> Eaten Burgers </h1>
            {{#each burgers}} {{#if devoured}} {{> addedburger }} {{/if}} {{/each}}
        </ul>

    </div>

    <div class="burger-button">

        <h2>Add a Burger</h2>
        <form action="/api/burger" method="POST" class="create-form">

            <div class="form-group">
                <label for="ca">Burger:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">

            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>




